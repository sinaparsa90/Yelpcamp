<%- include ('../partials/header') %>
<div class="container row ">
      <div class="col-md-3">
       <p class="lead">YelpCamp</p>
        <div class="list-group">
          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item ">Info 2</li>
          <li class="list-group-item ">Info 3</li>
        </div>
     </div>
    
      <div class="col-md-9">
        <div class=" p-3 border">
           <img class="  rounded mx-auto d-block" src="<%= campground.image %>" >
           <div class="caption-full">
             <h4 class="float-right">$9.00/night</h4>
             <h4><a href="#"><%= campground.name %></a></h4>
             <p> <%= campground.description %></p>
            </div>
         </div>
         <div class=" mt-3 mb-3 pt-3 pb-3 bg-light col-md-12 card">
           <div class="float-right">
             <a class= " float-right btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new" > Add new comment </a>
           
           </div>
           <hr>
           <% campground.comments.forEach(function(comment){ %>
            <div class="row">
               <div class="col-md-12">
                  
                 <b><%= comment.author %></b> 
                  <span class="float-right"> 10 days ago</span>
                  <p><%= comment.text %> </p>
               </div>
            </div>
            
          <% }) %>
            
         </div>
      </div>
</div>





<%- include ('../partials/footer') %>